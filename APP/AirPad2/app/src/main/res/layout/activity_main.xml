<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blue"
    android:orientation="horizontal"
    tools:context="bq.alvaroferran.airpad2.MainActivity">

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnStop"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/stop"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_marginLeft="95dp" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnUp"
        android:layout_above="@+id/btnStop"
        android:layout_alignLeft="@+id/btnStop"
        android:layout_alignStart="@+id/btnStop"
        android:layout_marginBottom="20dp"
        android:src="@drawable/up"
        android:background="@null"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnDown"
        android:layout_below="@+id/btnStop"
        android:layout_alignLeft="@+id/btnStop"
        android:layout_alignStart="@+id/btnStop"
        android:layout_marginTop="20dp"
        android:src="@drawable/down"
        android:background="@null"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnLeft"
        android:layout_below="@+id/btnUp"
        android:layout_toLeftOf="@+id/btnDown"
        android:layout_toStartOf="@+id/btnDown"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        android:background="@null"
        android:src="@drawable/left" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnRight"
        android:layout_below="@+id/btnUp"
        android:layout_toRightOf="@+id/btnStop"
        android:layout_toEndOf="@+id/btnStop"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        android:background="@null"
        android:src="@drawable/right" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnPlus"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:scaleType="fitXY"
        android:background="@null"
        android:src="@drawable/plus" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnSkull"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btnPlus"
        android:layout_toStartOf="@+id/btnPlus"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/skull"
        android:background="@null"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnFlame"
        android:layout_alignTop="@+id/btnUp"
        android:layout_alignRight="@+id/btnPlus"
        android:layout_alignEnd="@+id/btnPlus"
        android:scaleType="fitXY"
        android:background="@null"
        android:src="@drawable/flame" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnHeart"
        android:layout_alignTop="@+id/btnFlame"
        android:layout_alignRight="@+id/btnSkull"
        android:layout_alignEnd="@+id/btnSkull"
        android:src="@drawable/heart"
        android:background="@null"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnPunch"
        android:layout_alignBottom="@+id/btnDown"
        android:layout_alignRight="@+id/btnSkull"
        android:layout_alignEnd="@+id/btnSkull"
        android:scaleType="fitXY"
        android:background="@null"
        android:src="@drawable/punch" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnMask"
        android:layout_alignBottom="@+id/btnPunch"
        android:layout_alignRight="@+id/btnPlus"
        android:layout_alignEnd="@+id/btnPlus"
        android:alpha="100"
        android:scaleType="fitXY"
        android:background="@null"
        android:src="@drawable/mask" />
</RelativeLayout>
